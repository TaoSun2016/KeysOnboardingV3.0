@model IEnumerable<KeysOnboarding.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>

<p>
    <a id="btnCreate" href="#myModal" data-toggle="modal" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="display: none;">ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: Products">
        <tr>
            <td data-bind="visible:false, text: Id "></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Price"></td>
            <td>
                <a id="btnEdit" class="btn btn-info" data-toggle="modal" href="#myModal" data-bind="click: $root.edit">Edit</a>
                <a id="btnDelete" class="btn btn-danger" data-toggle="modal" href="#myModal" data-bind="click: $root.delete">Delete</a>
            </td>
        </tr>
    </tbody>

</table>

<div id="myModal" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" data-bind="text: OperationTitle"></h4>
            </div>
            <div class="modal-body">
                <div id="modal-content">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="createUI" style="display:none">
    <div class="row">
        <label for="name">Name</label>
        <input data-bind="value: $root.Name" type="text" title="Name" />
    </div>

    <div>
        <label for="price">Price</label>
        <input data-bind="value: $root.Price" type="text" title="Price" />
    </div>
    <hr />
    <div>
        <button class="btn btn-success" data-bind="click: $root.create">Save</button>
        <button class="btn btn-info" data-dismiss="modal" data-bind="click: $root.reset">Close</button>
    </div>
</div>

<div class="editUI" style="display:none">
    <div>
        <label for="productId">ID</label>
        <label data-bind="text: $root.Product().Id"></label>

    </div>
    <div>
        <label for="name">Name</label>
        <input data-bind="value: $root.Product().Name" type="text" title="Name" />
    </div>

    <div>
        <label for="price">Price</label>
        <input data-bind="value: $root.Product().Price" type="text" title="Price" />

    </div>
    <br />
    <div>
        <button  class="btn btn-success" data-bind="click: $root.update">Update</button>
        <button class="btn btn-info" data-dismiss="modal" data-bind="click: $root.cancel">Cancel</button>

    </div>
</div>

<div class="deleteUI" style="display:none">
    <div>
        <label for="productId">ID</label>
        <label data-bind="text: Product().Id"></label>

    </div>
    <div>
        <label for="name">Name</label>
        <input data-bind="value: Product().Name" type="text" title="Name" />
    </div>

    <div>
        <label for="price">Price</label>
        <input data-bind="value: Product().Price" type="text" title="Price" />

    </div>
    <br />
    <div>
        <button class="btn btn-success" data-bind="click: $root.deleteConfirm">Delete</button>
        <button class="btn btn-info" data-dismiss="modal" data-bind="click: $root.cancel">Cancel</button>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/App/Product.js"></script>
}