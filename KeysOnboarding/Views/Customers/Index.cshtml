<h2>Customer List</h2>

<p>
    <a id="btnCreate" href="#myCreateModal" data-toggle="modal" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th style="display: none;">ID</th>
            <th>Name</th>
            <th>Addrress</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: Customers">
        <tr>
            <td data-bind="visible:false, text: Id "></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Address"></td>
            <td>
                <a id="btnEdit" class="btn btn-info" data-toggle="modal" href="#myEditModal" data-bind="click: $root.edit">Edit</a>
                <a id="btnDelete" class="btn btn-danger" data-toggle="modal" href="#myDeleteModal" data-bind="click: $root.delete">Delete</a>
            </td>
        </tr>
    </tbody>

</table>

<div id="myCreateModal" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create New Customer</h4>
            </div>
            <div class="modal-body">
                <div id="modal-content">
                    <div class="row">
                        <label for="name" class="col-sm-2">Name</label>
                        <input data-bind="value: $root.Name" type="text" title="Name" />
                    </div>
                    <br />
                    <div class="row">
                        <label for="address" class="col-sm-2">Address</label>
                        <input data-bind="value: $root.Address" type="text" title="Address" />
                    </div>
                    <hr />
                    <div class="row">
                        <button class="btn btn-success col-sm-offset-2" data-bind="click: $root.create">Save</button>
                        <button class="btn btn-info" data-dismiss="modal" data-bind="click: $root.reset">Close</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div id="myEditModal" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Customer</h4>
            </div>
            <div class="modal-body">
                <div id="modal-content" data-bind="with: Customer">
                    <div class="row">
                        <label for="customerId" class="col-sm-2">ID</label>
                        <label data-bind="text: Id"></label>

                    </div>
                    <br />
                    <div class="row">
                        <label for="name" class="col-sm-2">Name</label>
                        <input data-bind="value: Name" type="text" title="Name" />
                    </div>
                    <br />
                    <div class="row">
                        <label for="address" class="col-sm-2">Price</label>
                        <input data-bind="value: Address" type="text" title="Address" />
                    </div>
                    <hr />
                    <div class="row">
                        <button class="btn btn-success col-sm-offset-2" data-dismiss="modal" data-bind="click: $root.update">Update</button>
                        <button class="btn btn-info" data-dismiss="modal" data-bind="click: $root.cancel">Cancel</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myDeleteModal" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Customer</h4>
            </div>
            <div class="modal-body">
                <div id="modal-content" data-bind="with: Customer">
                    <div class="row">
                        <label for="customerId" class="col-sm-2">ID</label>
                        <label data-bind="text: Id"></label>

                    </div>
                    <div class="row">
                        <label for="name" class="col-sm-2">Name</label>
                        <label data-bind="text: Name"></label>
                    </div>

                    <div class="row">
                        <label for="address" class="col-sm-2">Address</label>
                        <label data-bind="text: Address"></label>

                    </div>
                    <br />
                    <div class="row">
                        <button class="btn btn-success col-sm-offset-2" data-dismiss="modal" data-bind="click: $root.deleteConfirm">Delete</button>
                        <button class="btn btn-info" data-dismiss="modal" data-bind="click: $root.cancel">Cancel</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/App/Customer.js"></script>
}